NAME		= ft_printf.a

HEADER		= include/ft_printf.h

LIB			= libft.a

LIBDIR		= libft/libft.a

SRCS		= src/*.c

OBJS		= $(SRCS:.c=o)

RM			= rm -rm

CFLAGS		= -Wall -Wextra -Werror -g3 -Iinclude -Ilibft

all			: $(LIB) $(NAME)

$(NAME)		: $(OBJS) $(HEADER)
			cp libft/libft.a ./$(NAME)
			cp ft_printf/ft_printf.a/$(NAME)
			ar rc $(NAME) $(OBJS)

$(LIB)		:
			$(MAKE) -C libft all

clean		:
			@$(MAKE) -C libft clean
			@$(RM) $(OBJS)

fclean      : clean
			@$(MAKE) -C libft fclean
			@$(RM) $(NAME)

re          : fclean all

.PHONY      : clean fclean all re